{
  "name": "paychip",
  "version": "1.0.0",
  "description": "An API that allows business to generate wallets and track transactions",
  "main": "src/index.ts",
  "scripts": {
    "prepare": "npx ts-patch install -s",
    "test": "jest --watch",
    "test:int": "cross-env NODE_ENV=test jest --runInBand --config ./jest.int-config.js",
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "rm -rf build/ && tsc",
    "migrate": "node-pg-migrate -f ./migration-config.json --migration-filename-format utc",
    "migrate:dev": "node-pg-migrate -f ./migration-config.json --envPath ./.env.development -d MIGRATIONS_DATABASE_URL --migration-filename-format utc",
    "migrate:prod": "node-pg-migrate -f ./migration-config.json --envPath ./.env.production -d MIGRATIONS_DATABASE_URL --migration-filename-format utc",
    "migrate:test": "node-pg-migrate -f ./migration-config.json --envPath ./.env.test -d MIGRATIONS_DATABASE_URL --migration-filename-format utc"
  },
  "author": "Samuel Gopeh",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/config": "^3.3.0",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.5",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.11.18",
    "@types/pg": "^8.6.6",
    "@types/supertest": "^2.0.12",
    "cross-env": "^7.0.3",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "sequelize-cli": "^6.5.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "ts-patch": "^2.1.0",
    "tsconfig-paths": "^3.14.2",
    "typescript": "^4.9.4",
    "typescript-transform-paths": "^3.4.6"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "joi": "^17.7.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "nanoid": "^3.3.4",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.10.0",
    "sequelize": "^6.28.0"
  }
}
